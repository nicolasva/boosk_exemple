:each product in products
  %li.product_thumb.span6{id: "product_thumb_"+product.uuid}
    .pictures
      :if product.product_variants[0].pictures[0]
        %img{ src: product.product_variants[0].pictures[0].picture.url}
    %div
      .product_name
        = product.name
      .product_price
        = App.FixedPrice(product.product_variants[0].price_ttc) + " " + App.getCookie('shop_devise')
