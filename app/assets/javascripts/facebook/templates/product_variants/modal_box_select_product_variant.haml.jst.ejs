.modal-header
  %button{class: "close", data-dismiss: "modal"}
    = "×"
  %h3
    = "Séléctionner une variante pour ce produit"
%form#product_variant_add_cart
  = product.name
  %ol
    :each product_variant in product.product_variants
      %li
        %p
          = product_variant.price_ttc
        %p 
          %input{type:'radio', name:'product_variant[id]', value: product_variant.id}
        %ul
          :each product_variant_picture in product_variant.pictures
            %li
              %img{src: product_variant_picture.picture.url}
     
     
  .action
    %input{type: "submit", value: "Valider", id: "id_product_variant"}    
