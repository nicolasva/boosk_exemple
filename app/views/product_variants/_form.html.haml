= form_for [@product.shop, @product, @product_variant] , :html => { :multipart => true } do |f|

  = f.hidden_field :product_id

  %select.chzn-select{"data-placeholder" => "Choose yours options", :multiple => "true", :name => "product_variant[option_type_ids][]"}
    - @option_types.each do |option_type|
      %optgroup{:label => option_type[:type]}
        - option_type[:values].each do |option|
          %option{:value => option.id}= "#{option.name}: #{option.value}"
          
  = f.fields_for :pictures do |picture|
    = render "picture_form", :f => picture
    
  .field
    = f.label :price
    %br
    = f.text_field :price
  .field
    = f.label :weight
    %br
    = f.text_field :weight
  .field
    = f.label :height
    %br
    = f.text_field :height
  .field
    = f.label :width
    %br
    = f.text_field :width
  .field
    = f.label :height
    %br
    = f.text_field :height
  .actions
    = f.submit