= form_for(@shop) do |f|
  - if @shop.errors.any?
    #error_explanation
      %h2
        = pluralize(@shop.errors.count, "error")
        prohibited this shop from being saved:
      %ul
        - @shop.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :baseline
    %br
    = f.text_field :baseline
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :terms
    %br
    = f.text_area :terms
  .actions
    = f.submit