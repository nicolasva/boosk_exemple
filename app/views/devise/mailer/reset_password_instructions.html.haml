%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %style{:type => "text/css"}
      body{padding:0px;margin:0px;color:#333}
      p {line-height: 16px;padding:0px;margin:0px;margin-top:10px;}
      \.without-margin {margin:0px;}
      \#page{background-color:#E9F0F9;min-height:580px;}
      \#header{background-color:#000000;padding:5px;margin:0px;}
      \#title {background-color:#D7E4F4;border-bottom:1px solid #C3D7EF;padding:5px;margin:0px;}
      \#title h1{color:#719FDA;padding:5px;text-align:center;font-size:24px;}
      \#content{padding: 1px 20px;margin-top:20px;margin-bottom:20px;}
      \#content h2{color:#ff6600; font-size:16px;margin-top:20px;}
      \#content ul{list-style-type:none;margin-bottom:5px;padding:0 20px;}
      \#content ul li span {color:#ff6600}
      \#sign{padding: 1px 20px;font-weight:600;}
      \#footer {background-color:#D7E4F4;border-bottom:1px solid #C3D7EF;text-align:center;padding:5px;margin:0px;}
      \#footer p.noreply {color:#85ACE0;font-size:10px;}
  %body
    #page
      #header
        = image_tag("boosket-shop.png")
      #title
        %h1= t(:reset_password_instructions, scope: [:devise, :mailer, :subject])
      #content
        %p.without-margin
          %strong= "#{@user.firstname} #{@user.lastname},"

        %p Someone has requested a link to change your password, and you can do this through the link below.
        %p= link_to 'Change my password', edit_password_url(@resource, :reset_password_token => @resource.reset_password_token)
        %p If you didn't request this, please ignore this email.
        %p Your password won't change until you access the link above and create a new one.

      #sign
        %p.without-margin The Boosket Team

    #footer
      %p.noreply This is an automatically generated email, please do not reply.
